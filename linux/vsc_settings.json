{
    "workbench.settings.editor": "json",
    "editor.fontLigatures": true,
    "editor.fontFamily": "'FiraCode Nerd Font'",
    "editor.fontSize": 14,
    "terminal.integrated.fontFamily": "MesloLGS NF",
    "terminal.integrated.rendererType": "canvas",
    "terminal.integrated.fontSize": 14,
    "editor.minimap.maxColumn": 120,
    "editor.wordWrap": "off",
    "editor.formatOnSave": true,
    "C_Cpp.clang_format_path": "/usr/bin/clang-format",
    "C_Cpp.clang_format_fallbackStyle": "{ColumnLimit: 0}",
    "workbench.colorTheme": "Horizon",
    // Vim commands
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "j",
                "j"
            ],
            "after": [
                "<Esc>"
            ]
        }
    ],
    "vim.overrideCopy": true,
    "vim.easymotion": true,
    "vim.easymotionMarkerFontFamily": "FiraCode Nerd Font",
    "vim.easymotionMarkerForegroundColorTwoChar": "red",
    "vim.easymotionMarkerForegroundColorOneChar": "red",
    "vim.easymotionMarkerBackgroundColor": "#1f1e1f",
    "vim.easymotionMarkerHeight": 16,
    "vim.easymotionMarkerWidthPerChar": 10,
    "vim.leader": ",",
    "vim.statusBarColorControl": true,
    "vim.useSystemClipboard": true,
    "vim.highlightedyank.enable": true,
    "vim.vimrc.enable": true,
    "vim.useCtrlKeys": true,
    // "vim.vimrc.path": "/home/bmarden/",
    "workbench.colorCustomizations": {
        "statusBar.background": "#005f5f",
        "statusBar.noFolderBackground": "#005f5f",
        "statusBar.debuggingBackground": "#005f5f"
    },
    "C_Cpp.default.cStandard": "c99",
    "C_Cpp.default.intelliSenseMode": "gcc-x64",
    "vsicons.dontShowNewVersionMessage": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "terminal.integrated.shell.linux": "/usr/bin/zsh"
}