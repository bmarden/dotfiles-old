{
    /**
    ** --- General Editor Settings ----
    **/
    "workbench.settings.editor": "json",
    // "workbench.settings.useSplitJSON": true,
    "editor.fontSize": 13,
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.tokenColorCustomizations": {
        "[Horizon]": {
            "comments": "#97979b33"
        }
    },
    // "editor.fontFamily": "FiraCode Nerd Font",
    "editor.fontFamily": "Hack Nerd Font",
    "editor.fontWeight": "400",
    "editor.fontLigatures": true,
    "window.zoomLevel": 0,
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "explorer.confirmDelete": false,
    /**
    ** ---- Terminal Settings ----
    **/
    "workbench.colorCustomizations": {
        // The background is optional
        "terminal.background": "#323336",
        "terminalCursor.background": "#282a36",
        "terminalCursor.foreground": "#97979b",
        "terminal.selectionBackground": "#97979b33",
        "terminal.foreground": "#eff0eb",
        "terminal.ansiBlack": "#282a36",
        "terminal.ansiRed": "#ff5c57",
        "terminal.ansiGreen": "#5af78e",
        "terminal.ansiYellow": "#f3f99d",
        // "terminal.ansiBlue": "#57c7ff",
        "terminal.ansiBlue": "#0084ff",
        "terminal.ansiMagenta": "#ff6ac1",
        "terminal.ansiCyan": "#9aedfe",
        "terminal.ansiWhite": "#f1f1f0",
        "terminal.ansiBrightBlack": "#686868",
        "terminal.ansiBrightRed": "#ff5c57",
        "terminal.ansiBrightGreen": "#5af78e",
        "terminal.ansiBrightYellow": "#f3f99d",
        "terminal.ansiBrightBlue": "#57c7ff",
        "terminal.ansiBrightMagenta": "#ff6ac1",
        "terminal.ansiBrightCyan": "#9aedfe",
        "terminal.ansiBrightWhite": "#eff0eb",
        "editorBracketMatch.background": "#acacac9f",
        "editorBracketMatch.border": "#ffffff",
        "editor.selectionBackground": "#5aa9dd7c", //Current selected text
        "editor.selectionHighlightBackground": "#ff00005b", //Same content as selection
        "editor.findMatchBackground": "#00cc44a8", //Current SEARCH MATCH
        "editor.findMatchHighlightBackground": "#ff7b00a1" //Other SEARCH MATCHES
    },
    "terminal.external.osxExec": "iterm2",
    "terminal.integrated.shell.osx": "/bin/zsh",
    "terminal.integrated.fontFamily": "Hack Nerd Font",
    "terminal.integrated.fontSize": 13,
    "vsicons.dontShowNewVersionMessage": true,
    // "theme-by-language.themes": {
    // "*": "Monokai Pro (Filter Spectrum)",
    // "markdown": "Monokai"
    // },
    /**
    ** ---- C/C++ Settings ----
    **/
    "C_Cpp.clang_format_fallbackStyle": "Mozilla",
    "C_Cpp.default.cppStandard": "c++11",
    "C_Cpp.clang_format_style": "{BasedOnStyle: Google, ColumnLimit: 0, UseTab: Never, IndentWidth: 4, TabWidth: 4}",
    "C_Cpp.default.cStandard": "c99",
    /**
    ** ---- Python Settings ----
    **/
    // "python.linting.pylintPath": "pylint",
    // "python.linting.pylintArgs": [
    //     "--load-plugins",
    //     "pylint_django",
    //     "--disable",
    //     "C0114",
    //     "--disable",
    //     "C0116",
    //     "--disable",
    //     "C0115"
    // ],
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--line-length",
        "120"
    ],
    "python.languageServer": "Microsoft",
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length",
        "120"
    ],
    "code-runner.executorMap": {
        "python": "$pythonPath -u $fullFileName"
    },
    "code-runner.showExecutionMessage": false,
    "code-runner.clearPreviousOutput": true,
    "python.linting.enabled": true,
    "workbench.iconTheme": "material-icon-theme",
    "files.associations": {
        "*.gpl": "cpp"
    },
    /**
    ** ---- Gitlens Settings ----
    **/
    "gitlens.views.repositories.location": "gitlens",
    "gitlens.views.fileHistory.location": "gitlens",
    "gitlens.views.lineHistory.location": "gitlens",
    "gitlens.views.compare.location": "gitlens",
    "gitlens.views.search.location": "gitlens",
    "gitlens.mode.statusBar.alignment": "left",
    "gitlens.statusBar.alignment": "left",
    "gitlens.menus": {
        "editor": {
            "blame": false,
            "clipboard": true,
            "compare": true,
            "details": false,
            "history": false,
            "remote": false
        },
        "editorGroup": false,
        "editorTab": {
            "clipboard": true,
            "compare": true,
            "history": true,
            "remote": true
        },
        "explorer": {
            "clipboard": true,
            "compare": true,
            "history": true,
            "remote": true
        },
        "scmGroup": {
            "compare": true,
            "openClose": true,
            "stash": true,
            "stashInline": true
        },
        "scmItem": {
            "clipboard": true,
            "compare": true,
            "history": true,
            "remote": true,
            "stash": true
        }
    },
    "better-comments.tags": [
        {
            "tag": "!",
            "color": "#FF2D00",
            "strikethrough": false,
            "backgroundColor": "transparent"
        },
        {
            "tag": "?",
            "color": "#3498DB",
            "strikethrough": false,
            "backgroundColor": "transparent"
        },
        {
            "tag": "//",
            "color": "#81818181",
            "strikethrough": true,
            "backgroundColor": "transparent"
        },
        {
            "tag": "todo",
            "color": "#FF8C00",
            "strikethrough": false,
            "backgroundColor": "transparent"
        },
        {
            "tag": "*",
            "color": "#98C379",
            "strikethrough": false,
            "backgroundColor": "transparent"
        }
    ],
    /**
    ** ---- NeoVim Settings ----
    **/
    "vscode-neovim.neovimInitPath": "/Users/bmarden/.config/nvim/init.vim",
    "vscode-neovim.neovimPath": "/usr/local/bin/nvim",
    /**
    ** ---- Dart / Flutter Settings ----
    **/
    "dart.runPubGetOnPubspecChanges": false,
    "dart.flutterCreateOrganization": "com.",
    "dart.previewFlutterUiGuides": true,
    "dart.flutterSdkPath": "/Users/bmarden/development/flutter",
    /**
    ** ---- Markdown Settings ---- 
    */
    "markdownlint.config": {
        "MD013": false,
        "MD033": false,
    },
    "markdown.styles": [
        "https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css",
        // "https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css",
    ],
    /**
    ** ---- Miscellaneous Settings ---- 
    */
    "latex-workshop.view.pdf.viewer": "tab",
    "explorer.confirmDragAndDrop": false,
    "editor.semanticHighlighting.enabled": true,
    "workbench.colorTheme": "One Dark Pro"
}